#!/usr/bin/env bash

echo "Installing some basic packages"

{{ if (eq .chezmoi.os "linux") }}
  {{- if (or (eq .chezmoi.osRelease.id "pop") (eq .chezmoi.osRelease.id "ubuntu") ) -}}
sudo apt-get install -y zsh vim tmux htop git build-essential
  {{- else if (or (eq .chezmoi.osRelease.id "manjaro") (eq .chezmoi.osRelease.id "arch" ) ) -}}
sudo pacman -S zsh vim tmux htop git base-devel
  {{- end -}}
{{ end }}

echo "Running individual application setup scripts"

# Run VIM setup
~/.vim/install.sh

# Run ZSH Setup
~/.zsh/install.sh

# Run tmux install
~/.config/tmux/install.sh
